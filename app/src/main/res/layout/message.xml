<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/top_and_bottom_line" android:elevation="1dp"
                android:padding="@dimen/message_padding">
    <ImageView
            android:layout_height="60dp"
            android:id="@+id/main_page_avatar"
            android:layout_width="60dp"
            android:padding="@dimen/message_padding"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:paddingEnd="5dp">
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dialog_name_height"
                android:orientation="horizontal">
            <TextView
                    android:id="@+id/dialog_title"
                    android:text="Very long dialog name stub that you can never read"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="18sp"
                    android:ellipsize="end"
                    android:paddingEnd="70dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:id="@+id/date"
                    android:layout_gravity="end"
                    android:padding="@dimen/table"
                    android:text="21 jul 2017" android:textAlignment="textEnd" android:textSize="12sp"/>
        </FrameLayout>
        <TextView
                android:id="@+id/content"
                android:text="This is simple content of the message bla-bla-bla-bla"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" android:textAllCaps="false"
                android:typeface="normal"/>
    </LinearLayout>

</LinearLayout>