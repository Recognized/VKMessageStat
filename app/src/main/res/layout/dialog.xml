<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingTop="5dp"
              android:paddingRight="5dp"
              android:paddingLeft="5dp"
              android:background="@color/vk_white">

    <ImageView
            app:srcCompat="@drawable/stub" android:id="@+id/main_page_avatar"
            android:padding="5dp" android:layout_width="@dimen/avatar_size"
            android:layout_height="@dimen/avatar_size"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:background="@drawable/bottom_line">
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dialog_name_height"
                android:orientation="horizontal">
            <TextView
                    android:id="@+id/dialog_title"
                    android:text="Very long dialog name stub that you can never read"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="18sp"
                    android:ellipsize="end"
                    android:paddingEnd="70dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:id="@+id/date"
                    android:layout_gravity="end"
                    android:padding="@dimen/table"
                    android:text="21 jul 2017" android:textAlignment="textEnd"/>
        </FrameLayout>
        <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                <TextView
                        style="@style/tableTheme"
                        android:text="@string/message_count"/>
                <TextView
                        android:id="@+id/messages_count"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                        android:paddingLeft="@dimen/table"
                        android:paddingRight="@dimen/table"
                        android:text="456890/866932"/>
                <TextView
                        android:id="@+id/message_position"
                        style="@style/tableTheme"
                        android:layout_gravity="end"
                        android:text="#1"/>
            </TableRow>
            <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                <TextView
                        style="@style/tableTheme"
                        android:text="@string/symbols_count"/>
                <TextView
                        android:id="@+id/symbols_count"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                        android:paddingLeft="@dimen/table"
                        android:text="1234567/7654321"
                        android:paddingRight="@dimen/table"/>
                <TextView
                        android:id="@+id/symbols_position"
                        style="@style/tableTheme"
                        android:layout_gravity="end"
                        android:text="#1"/>
            </TableRow>
            <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                <TextView
                        style="@style/tableTheme"
                        android:text="@string/attachments_count"/>
                <TextView
                        android:id="@+id/attachments_count"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                        android:paddingLeft="@dimen/table"
                        android:paddingRight="@dimen/table"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>
</LinearLayout>